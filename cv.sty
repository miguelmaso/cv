\ProvidesPackage{cv}

\RequirePackage{tgpagella} % set the default font
\RequirePackage[utf8]{inputenc} % for input encoding
\RequirePackage[T1]{fontenc} % font output encoding
\RequirePackage[a4paper, margin=0.75in]{geometry}
\RequirePackage[style=authoryear,defernumbers=true,sorting=ydnt,dashed=false,datamodel=cv]{biblatex}
\RequirePackage[pagestyles]{titlesec} % it also loads titleps
\RequirePackage{parskip} % avoiding indent at the begining of paragraph
\RequirePackage{tabularx} % tabular with auto-adjusted column width
\RequirePackage[colorlinks=true, allcolors=black]{hyperref}
\RequirePackage{csquotes} % support for quotes depending language

\titleformat{\section}{\fontfamily{phv}\large\bfseries}{}{0em}{}[\titlerule] % Section title format
\titleformat{\subsection}{\fontfamily{phv}\normalsize\bfseries}{}{0em}{} % Subsection title format

\renewpagestyle{plain}{\setfoot{}{\thepage}{\small\today}}
\pagestyle{plain}

\newcommand{\email}[1]{\href{mailto:#1}{#1}}

\makeatletter
\renewcommand{\maketitle}{{\fontfamily{phv}\Large\bfseries\@author}\\}
\makeatother

\renewcommand{\arraystretch}{1.2} % adding more space between tabular rows

\setlength\bibitemsep{8pt} % space between bib entries
\setlength\bibhang{0pt} % removing indentation
